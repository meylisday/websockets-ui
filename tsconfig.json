{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["ES2021", "DOM"],"paths": {
      "~/*": ["src/*"],
      ".../*": ["*"]
      },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
